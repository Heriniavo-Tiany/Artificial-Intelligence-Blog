<% include header %>

<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <% for (let article of articles) { %>
                        <div class="col-lg-3 col-md-6">
                            <article class="post-grid mb-5">
                                <a class="post-thumb mb-4 d-block" href="/blogs/<%= article.id %>/<%= article.slug %>">
                                    <img src="<%= article.thumbnail %>" alt="" class="img-fluid w-100">
                                </a>
                                <h3 class="post-title mt-1"><a href="/blogs/<%= article.id %>/<%= article.slug %>"><%= article.title %></a></h3>

                                <span class="text-muted letter-spacing text-uppercase font-sm">June 15, 2019</span>

                            </article>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="m-auto">
                <div class="pagination mt-5 pt-4">
                    <ul class="list-inline ">
                        <% if (currentPage > 1) { %>
                            <li class="list-inline-item"><a href="?page=<%= currentPage - 1 %>" class="prev-posts"><i class="ti-arrow-left"></i></a></li>
                        <% } %>
                        <% if (articles.length === pageSize) { %>
                            <li class="list-inline-item"><a href="?page=<%= currentPage + 1 %>" class="active"><%= currentPage + 1 %></a></li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <li class="list-inline-item"><a href="?page=<%= currentPage + 1 %>" class="prev-posts"><i class="ti-arrow-right"></i></a></li>
                        <% } %>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>

<% include footer %>
